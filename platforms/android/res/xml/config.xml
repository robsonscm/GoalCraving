<?xml version='1.0' encoding='utf-8'?>
<widget id="ca.edumedia.stra0165.goalcraving" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="Device">
        <param name="android-package" value="org.apache.cordova.device.Device" />
    </feature>
    <feature name="SplashScreen">
        <param name="android-package" value="org.apache.cordova.splashscreen.SplashScreen" />
        <param name="onload" value="true" />
    </feature>
    <name>STRA0165 Goal Craving</name>
    <description>
        This is a soccer based application to provide scores and schedules for Premiere League games.
    </description>
    <author email="stra0165@algonquinlive.com" href="https://github.com/robsonscm">
        Robson Miranda
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="market:*" />
    <splash density="land-ldpi" src="www/img/splash/splash-landscape-200x300px-8.png" />
    <splash density="land-mdpi" src="www/img/splash/splash-landscape-320x480px-8.png" />
    <splash density="land-hdpi" src="www/img/splash/splash-landscape-480x800px-8.png" />
    <splash density="land-xhdpi" src="www/img/splash/splash-landscape-720px1280px-8.png" />
    <splash density="land-xxhdpi" src="www/img/splash/splash-landscape-960px1600px-8.png" />
    <splash density="land-xxxhdpi" src="www/img/splash/splash-landscape-1280px1920px-8.png" />
    <splash density="port-ldpi" src="www/img/splash/splash-portrait-200x300px-8.png" />
    <splash density="port-mdpi" src="www/img/splash/splash-portrait-320x480px-8.png" />
    <splash density="port-hdpi" src="www/img/splash/splash-portrait-480x800px-8.png" />
    <splash density="port-xhdpi" src="www/img/splash/splash-portrait-720px1280px-8.png" />
    <splash density="port-xxhdpi" src="www/img/splash/splash-portrait-960px1600px-8.png" />
    <splash density="port-xxxhdpi" src="www/img/splash/splash-portrait-1280px1920px-8.png" />
    <icon density="ldpi" src="www/img/icons/icon48x48-8.png" />
    <icon density="mdpi" src="www/img/icons/icon72x72-8.png" />
    <icon density="hdpi" src="www/img/icons/icon96x96-8.png" />
    <icon density="xhdpi" src="www/img/icons/icon144x144-8.png" />
    <icon density="xxhdpi" src="www/img/icons/icon192x192-8.png" />
    <icon density="xxxhdpi" src="www/img/icons/icon512x512-8.png" />
    <preference name="loglevel" value="DEBUG" />
    <preference name="SplashScreen" value="screen" />
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="SplashScreenDelay" value="5000" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="SplashShowOnlyFirstTime" value="false" />
</widget>
